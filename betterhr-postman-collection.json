{
	"info": {
		"_postman_id": "betterhr-api-collection",
		"name": "betterHR API Collection",
		"description": "API collection for betterHR Multi-tenant Serverless Backend. Includes Authentication (Cognito), Employee, and Workflow (Attendance/Leave) services.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Authentication (Cognito)",
			"description": "Requests to interact with AWS Cognito for user authentication. Note: These requests go directly to Cognito's public API.",
			"item": [
				{
					"name": "Sign Up",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "X-Amz-Target",
								"value": "AWSCognitoIdentityProviderService.SignUp",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/x-amz-json-1.1",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"ClientId\": \"{{clientId}}\",\n    \"Username\": \"user@example.com\",\n    \"Password\": \"Password123!\",\n    \"UserAttributes\": [\n        {\n            \"Name\": \"email\",\n            \"Value\": \"user@example.com\"\n        },\n        {\n            \"Name\": \"custom:companyId\",\n            \"Value\": \"Company_Alpha\"\n        },\n        {\n            \"Name\": \"custom:role\",\n            \"Value\": \"EMPLOYEE\"\n        }\n    ]\n}"
						},
						"url": {
							"raw": "https://cognito-idp.{{region}}.amazonaws.com/",
							"protocol": "https",
							"host": [
								"cognito-idp",
								"{{region}}",
								"amazonaws",
								"com"
							],
							"path": [
								""
							]
						}
					},
					"response": []
				},
				{
					"name": "Login (InitiateAuth)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.AuthenticationResult) {",
									"    pm.environment.set(\"idToken\", jsonData.AuthenticationResult.IdToken);",
									"    pm.environment.set(\"accessToken\", jsonData.AuthenticationResult.AccessToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "X-Amz-Target",
								"value": "AWSCognitoIdentityProviderService.InitiateAuth",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/x-amz-json-1.1",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"AuthFlow\": \"USER_PASSWORD_AUTH\",\n    \"ClientId\": \"{{clientId}}\",\n    \"AuthParameters\": {\n        \"USERNAME\": \"user@example.com\",\n        \"PASSWORD\": \"Password123!\"\n    }\n}"
						},
						"url": {
							"raw": "https://cognito-idp.{{region}}.amazonaws.com/",
							"protocol": "https",
							"host": [
								"cognito-idp",
								"{{region}}",
								"amazonaws",
								"com"
							],
							"path": [
								""
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "Employee Service",
			"item": [
				{
					"name": "List Employees",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{idToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/employees",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"employees"
							]
						},
						"description": "Get all employees for the authenticated user's company. Requires ADMIN or HR role."
					},
					"response": []
				},
				{
					"name": "Get Employee",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{idToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/employees/:id",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"employees",
								":id"
							],
							"variable": [
								{
									"key": "id",
									"value": "employee-uuid-here"
								}
							]
						},
						"description": "Get details of a specific employee."
					},
					"response": []
				},
				{
					"name": "Promote Employee",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{idToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/employees/:id/promote",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"employees",
								":id",
								"promote"
							],
							"variable": [
								{
									"key": "id",
									"value": "employee-uuid-here"
								}
							]
						},
						"description": "Promote an employee to HR role. Requires ADMIN role."
					},
					"response": []
				}
			]
		},
		{
			"name": "Workflow Service (Attendance & Leave)",
			"item": [
				{
					"name": "Attendance",
					"item": [
						{
							"name": "Clock In",
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Authorization",
										"value": "Bearer {{idToken}}",
										"type": "text"
									}
								],
								"url": {
									"raw": "{{baseUrl}}/attendance/clock-in",
									"host": [
										"{{baseUrl}}"
									],
									"path": [
										"attendance",
										"clock-in"
									]
								},
								"description": "Register a clock-in event for the current user."
							},
							"response": []
						}
					]
				},
				{
					"name": "Leave Management",
					"item": [
						{
							"name": "Apply for Leave",
							"request": {
								"method": "POST",
								"header": [
									{
										"key": "Authorization",
										"value": "Bearer {{idToken}}",
										"type": "text"
									}
								],
								"body": {
									"mode": "raw",
									"raw": "{\n    \"startDate\": \"2024-03-01T09:00:00Z\",\n    \"endDate\": \"2024-03-05T18:00:00Z\",\n    \"type\": \"ANNUAL\",\n    \"reason\": \"Family vacation\"\n}",
									"options": {
										"raw": {
											"language": "json"
										}
									}
								},
								"url": {
									"raw": "{{baseUrl}}/leave/apply",
									"host": [
										"{{baseUrl}}"
									],
									"path": [
										"leave",
										"apply"
									]
								},
								"description": "Submit a new leave application."
							},
							"response": []
						},
						{
							"name": "Approve Leave",
							"request": {
								"method": "PATCH",
								"header": [
									{
										"key": "Authorization",
										"value": "Bearer {{idToken}}",
										"type": "text"
									}
								],
								"url": {
									"raw": "{{baseUrl}}/leave/:id/approve",
									"host": [
										"{{baseUrl}}"
									],
									"path": [
										"leave",
										":id",
										"approve"
									],
									"variable": [
										{
											"key": "id",
											"value": "leave-uuid-here"
										}
									]
								},
								"description": "Approve a pending leave request. Requires ADMIN or HR role."
							},
							"response": []
						}
					]
				}
			]
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "region",
			"value": "us-east-1",
			"type": "string"
		},
		{
			"key": "clientId",
			"value": "your-cognito-client-id",
			"type": "string"
		},
		{
			"key": "idToken",
			"value": "",
			"type": "string"
		}
	]
}
